\newcommand{\fin}[1]{#1}
\newcommand{\continue}{}


%% Free Response
\NewDocumentCommand{\ask}{o}{
    \IfNoValueTF{#1}
    {\medskip\noindent\textbf{Question.}}             % No points
    {\medskip\noindent\textbf{Question (#1 Points).}}  % Points
}

\NewDocumentCommand{\sol}{o}{
    \IfNoValueTF{#1}
    {\noindent\textbf{Solution.}}             % No points
    {\noindent\textbf{Solution (#1 Factors).}}  % Points
}




